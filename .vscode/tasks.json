{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "compile",
			"group": "build",
			"presentation": {
				"panel": "dedicated",
				"reveal": "never"
			},
			"problemMatcher": [
				"$tsc"
			]
		},
		{
			"type": "npm",
			"script": "watch",
			"isBackground": true,
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"panel": "dedicated",
				"reveal": "never"
			},
			"problemMatcher": [
				"$tsc-watch"
			],
		},
		{
			"label": "language-server-build",
			"type": "process",
			"command": "go",
			"args": [
				"build",
				"-o",
				"gotypeconverter-langserver",
				"./...",
			],
			"options": {
				"cwd": "${workspaceRoot}/server"
			},
			"group": "build",
			"dependsOn":{
				"type": "npm",
				"script": "watch"
			}
		},
		{
			"label": "sleep-delay",
			"type": "shell",
			"command": "sleep 10",
			"group": "none",
		}
	]
}